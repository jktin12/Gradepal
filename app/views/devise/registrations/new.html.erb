<%= render layout: 'layouts/site_page' do %>
  <div class="flex">
    <div class="login">
      <div class="heading login-form">
        <h2>Gradepal</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {autocomplete: "off"}) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-group top">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email' %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <% placeholder = @minimum_password_length ? "Password (minimum #{@minimum_password_length} characters)" : 'Password' %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: placeholder %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Confirm password' %>
          </div>

          <div class="actions">
            <%= f.submit "Create account", class: "button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
